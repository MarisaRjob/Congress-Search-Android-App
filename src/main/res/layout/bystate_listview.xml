<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView android:id="@+id/bystateimg"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_margin="5px"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bystateimg">

        <TextView android:id="@+id/bystatename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="52px" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/bystateparty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="36px" />
        <TextView android:id="@+id/bystatestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="36px" />
        <TextView android:id="@+id/bystatedistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="36px" />
        </LinearLayout>


    </LinearLayout>


    <Button android:id="@+id/bystateview_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/detail"

        android:layout_alignParentRight="true"/>

</RelativeLayout>